<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/color_gray_d9d9d9</item>
        <item name="colorAccent">@color/color_blue_0888ff</item>
        <item name="actionBarSize">@dimen/action_bar_height</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="toolbarNavigationButtonStyle">@style/myToolbarNavigationButtonStyle</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:itemTextAppearance">?android:attr/actionMenuTextAppearance</item>
    </style>

    <!-- navigation style -->
    <style name="myToolbarNavigationButtonStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <!-- toolbar 文本 -->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- toolbar 文本 -->
    <style name="Toolbar.SubTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">10sp</item>
    </style>

    <!-- 黑色主题 -->
    <style name="DarkTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_black_333333</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/color_blue_0888ff</item>
        <item name="actionBarSize">@dimen/action_bar_height</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="toolbarNavigationButtonStyle">@style/myToolbarNavigationButtonStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LightBaseTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white_opacity_80</item>
        <item name="colorAccent">@color/color_blue_0888ff</item>
        <item name="actionBarSize">@dimen/action_bar_height</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="toolbarNavigationButtonStyle">@style/ToolbarNavigationButtonStyle</item>
    </style>
    <!-- navigation style -->
    <style name="ToolbarNavigationButtonStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="ImagePickerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fitsSystemWindows">true</item>
        <item name="colorAccent">#ff661a</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
    </style>

    <style name="ImagePickerTheme.BlackStatusBar">
        <item name="android:fitsSystemWindows">false</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
    </style>

    <style name="VideoTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fitsSystemWindows">true</item>
        <item name="colorAccent">#ff661a</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="myBaseAPPThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>`
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/white</item>
        <item name="statusBg">@color/black</item>
        <item name="titleBg">@color/white</item>

        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowAnimationStyle">@style/FeelyouWindowAnimTheme</item>
        <item name="android:launchMode">singleTask</item>
    </style>

    <style name="FeelyouWindowAnimTheme" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/right_to_center</item>
        <item name="android:activityOpenExitAnimation">@anim/center_to_left_offset</item>
        <item name="android:activityCloseEnterAnimation">@anim/keep</item>
        <item name="android:activityCloseExitAnimation">@anim/center_to_right</item>
    </style>

</resources>